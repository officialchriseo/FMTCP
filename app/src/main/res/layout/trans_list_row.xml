<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/trans_picture"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/fmtpics"/>

    <TextView
        android:id="@+id/trans_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bank Transfer"
        android:layout_toRightOf="@id/trans_picture"
        android:layout_marginTop="20dp"
        android:layout_marginStart="8dp"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/trans_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Diamond Bank"
        android:layout_below="@id/trans_name"
        android:layout_toRightOf="@id/trans_picture"
        android:layout_marginStart="8dp"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/trans_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:text="-N3,000"
        android:textStyle="bold"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"/>

    <TextView
        android:id="@+id/trans_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apr,13"
        android:layout_below="@id/trans_amount"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"/>

</RelativeLayout>